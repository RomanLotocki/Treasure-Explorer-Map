{% extends 'base.html.twig' %}

{% block title %}Liste des objets{% endblock %}

{% block body %}
    <h1>Liste des objets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>Nom</th>
                
                
                <th>Date de création</th>
                
                <th>Pays d'origine</th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.itemName }}</td>
                
                <td>{{ item.creationDate }}</td>
                
                <td>{{ item.itemCountry }}</td>
                
                <td>
                    <a href="{{ path('app_item_show', {'id': item.id}) }}">Détails</a>
                    <a href="{{ path('app_item_edit', {'id': item.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">Pas d'objets trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_new') }}">Ajouter un objet</a>
{% endblock %}
