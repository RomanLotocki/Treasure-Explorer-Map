{% extends 'base.html.twig' %}

{% block title %}Détails objet{% endblock %}

{% block body %}
    <h1>{{item.itemName}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>no</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>nom</th>
                <td>{{ item.itemName }}</td>
            </tr>
            <tr>
                <th>lien de l'image</th>
                <td>{{ item.itemImage }}</td>
            </tr>
            <tr>
                <th>description de l'objet</th>
                <td>{{ item.itemDescription }}</td>
            </tr>
            {# Display only if not null #}
            {% if item.discoveryDescription != null %}
            <tr>
                <th>description de la découverte</th>
                <td>{{ item.discoveryDescription }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>date de création</th>
                <td>{{ item.creationDate }}</td>
            </tr>
            {% if item.discoveryDate != null %}
            <tr>
                <th>date de découverte</th>
                <td>{{ item.discoveryDate }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>latitude</th>
                <td>{{ item.itemLatitude }}</td>
            </tr>
            <tr>
                <th>longitude</th>
                <td>{{ item.itemLongitude }}</td>
            </tr>
            <tr>
                <th>pays</th>
                <td>{{ item.itemCountry }}</td>
            </tr>
            <tr>
                <th>culture ou période</th>
                <td>{{ item.itemCulture }}</td>
            </tr>
            <tr>
                <th>matériaux</th>
                <td>{{ item.itemMaterials }}</td>
            </tr>
            <tr>
                <th>lieu de conservation</th>
                <td>{{ item.itemConservationSite }}</td>
            </tr>
            <tr>
                <th>lien du musée</th>
                <td>{{ item.itemConservationSiteUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-2" href="{{ path('app_item_index') }}">retour à la liste</a>

    <a class="btn btn-warning mb-2" href="{{ path('app_item_edit', {'id': item.id}) }}">modifier</a>

    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
