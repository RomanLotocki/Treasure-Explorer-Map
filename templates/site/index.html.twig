{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1>Site index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Site_description</th>
                <th>Site_culture</th>
                <th>Site_country</th>
                <th>Site_latitude</th>
                <th>Site_longitude</th>
                <th>Site_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.name }}</td>
                <td>{{ site.image }}</td>
                <td>{{ site.siteDescription }}</td>
                <td>{{ site.siteCulture }}</td>
                <td>{{ site.siteCountry }}</td>
                <td>{{ site.siteLatitude }}</td>
                <td>{{ site.siteLongitude }}</td>
                <td>{{ site.siteUrl }}</td>
                <td>
                    <a href="{{ path('app_site_show', {'id': site.id}) }}">show</a>
                    <a href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_site_new') }}">Create new</a>
{% endblock %}
